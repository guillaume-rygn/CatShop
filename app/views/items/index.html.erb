 <div class="banner">
  <div class="hero-text">
    <h1 style="font-weight: 700;">CatShop</h1>
    <h5>CatPic for your Grandma</h5>
  </div>
 </div>
 
 <br/>
 <h1 class="row justify-content-center" style="font-weight:600" >All Cats</h1>
 <br/>
 <div class="container">
  <div class="row justify-content-center">

    <%@items.each do |item|%>
        <div class="col-12 col-lg-3 col-md-6 mb-3">
          <div class="card-sl">
            <div class="card-image">
              <%=image_tag (item.image_url)%>
            </div>

            <div class="card-heading text-center"><%=item.title%></div>
            <div class="card-text text-center">
              <%=item.description%>
            </div>

            <div class="card-text text-center">
             <%=item.price%>â‚¬
              <div class="row justify-content-center mt-3">
                <a href="<%=item_path(item.id)%>" class="btn btn-cart col-4 mx-2">Read more</a>
                <%= button_to "Add to cart", cart_index_path, params: {item_id: item.id, quantity: 1}, method: :post, class: "btn btn-card"%><br>
              </div>
            </div>
          </div>
        </div>
    <%end%>
  </div>
 </div>